<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Shell>
		<Page title="{i18n>tituloCadastro}" showNavButton="true" navButtonPress="aoClicarVoltar" titleAlignment="Center" >
			<content>
				<FlexBox alignItems="Center" justifyContent="Center">
					<f:SimpleForm editable="true" layout="ResponsiveGridLayout" singleContainerFullSize="false" backgroundDesign="Solid">
						<f:content>
							<Label text="{i18n>labelNome}" />
							<Input  value="{aluno>nome}"  required="true"/>
							<Label text="{i18n>labelCpf}"  required="true"/>
							<Input/>
							<Label text="{i18n>labelTelefone}" required="true"/>
							<Input/>
							<Label text="{i18n>labelDataNascimento}" required="true" labelFor="DataNascimento"/>
							<DatePicker placeholder="{i18n>placeholderData}" class="sapUiSmallMarginBottom" width="auto"/>
							<Label></Label>
						    <FlexBox alignItems="Center" justifyContent="End"  alignContent="End" class="sapUiSmallMarginBottom" backgroundDesign="Translucent">

							   	<Button icon="sap-icon://sys-cancel"
								activeIcon=""
								
								text="cancelar"
								type="Transparent"
								width="115px">
								</Button>
								<Button icon="sap-icon://save" activeIcon="" 
								text="Salvar"
								type="Transparent"
								width="115px">
								</Button>
							</FlexBox>
						</f:content>
					</f:SimpleForm>
				</FlexBox>
			</content>
		</Page>
	</Shell>
</core:FragmentDefinition>
