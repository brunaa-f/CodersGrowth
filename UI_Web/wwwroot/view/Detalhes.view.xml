<mvc:View
   controllerName="ControleDeAlunos.controller.Detalhes"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">

      <Page title="{i18n>tituloDetalhes}" showNavButton="true" navButtonPress="aoClicarVoltar" titleAlignment="Center">
         <headerContent>
            <Button text="Editar" icon="sap-icon://user-edit"   iconDensityAware="false"/>
            <Button text="Excluir" icon="sap-icon://delete" iconDensityAware="false"/>
         </headerContent>
         <content>
            <ObjectHeader title="{aluno>/nome}" backgroundDesign="Solid" class="sapUiTinyMargin">
               <attributes>
                  <ObjectAttribute title="CPF" text="{aluno>/cpf}" active="false"/>
                  <ObjectAttribute title="Telefone" text="{aluno>/telefone}" active="false" />
                  <ObjectAttribute text="Data de Nascimento: {path: 'aluno>/nascimento', type: 'sap.ui.model.type.Date', formatOptions: {source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}"/>
               </attributes>
            </ObjectHeader>
         </content>
      </Page>
</mvc:View>