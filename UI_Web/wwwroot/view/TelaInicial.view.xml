<mvc:View
	controllerName="ControleDeAlunos.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
>
	<Shell>
		<App>
			<pages>
				<Page showHeader="true" showFooter="true" title="{i18n>homePageTitle}">
					<content>
						<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
							<content>
								<ToolbarSpacer width=""/>
								<SearchField placeholder="Search" showSearchButton="true" visible="true" width="30em"/>
								<Button text="Novo Aluno" type="Emphasized" icon="sap-icon://add" iconFirst="false" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
							</content>
						</OverflowToolbar>
						<List mode="SingleSelectMaster" width="100%" headerText="" footerText="" backgroundDesign="Solid" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" visible="true" itemPress="_onStandardListItemPress" items="{path:'/O_AlunoSet', templateShareable:true}">
							<infoToolbar>
								<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
									<content>
										<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
									</content>
								</Toolbar>
							</infoToolbar>
							<headerToolbar/>
							<items>
								<StandardListItem icon="sap-icon://person-placeholder" title="{Nome}" description="{Cpf}" info="" infoState="None" type="Navigation" selected="false" visible="true" press="_onStandardListItemPress1"/>
							</items>
						</List>
					</content>
				</Page>
		  	</pages>
		</App>
	</Shell>
</mvc:View>
